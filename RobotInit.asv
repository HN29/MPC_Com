function RobotInit(id)
% This function is used to initialize pos and draw robot's body.
global Robot x
global RP
% Init robot
Robot(id).x=[x(id,1), x(id,2)];
Robot(id).RP=RP(id,:);
% status robot
Robot(id).status = "free";
Robot(id).statusBanchor = "None";
% BC
Robot(id).Neighbor= [0 0];
Robot(id).Va= [0 0];
Robot(id).target = [0 0];
Robot(id).IDtarget = 0;


end